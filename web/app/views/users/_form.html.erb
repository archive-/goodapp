<%= form_for @user, :html => {:class => 'form-horizontal'} do |f| %>
  <fieldset>
    <legend>User Info</legend>
    <div class="control-group <%= control_status(@user, :name) %>">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'input-xlarge' %>
        <span class="help-inline"><%= @user.errors[:name][0] %></span>
      </div>
    </div>
    <div class="control-group <%= control_status(@user, :email) %>">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-envelope"></i></span>
          <%= f.text_field :email, :class => 'input-xlarge' %>
          <span class="help-inline"><%= @user.errors[:email][0] %></span>
        </div>
      </div>
    </div>
    <div class="control-group <%= control_status(@user, :password) %>">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'input-xlarge' %>
        <span class="help-inline"><%= @user.errors[:password][0] %></span>
      </div>
    </div>
    <div class="control-group <%= control_status(@user, :password_confirmation) %>">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'input-xlarge' %>
        <span class="help-inline"><%= @user.errors[:password_confirmation][0] %></span>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= button_tag 'Cancel', :type => 'reset', :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
