- title 'Login'

= form_for(resource, as: resource_name,
  url: session_path(resource_name), html: {class: "form-horizontal"}) do |f|
  %fieldset
    %legend Login
    .control-group
      = f.label :email
      .controls
        = f.text_field :email, class: "input-xlarge"
    .control-group
      = f.label :password
      .controls
        = f.password_field :password, class: "input-xlarge"
    - if devise_mapping.rememberable?
      .control-group
        .controls
          = f.check_box :remember_me
          = f.label :remember_me, class: "checkbox inline"
    .form-actions
      = f.submit "Login", class: "btn btn-primary"

= render "links"
