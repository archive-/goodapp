- title 'Register'

= form_for(resource, as: resource_name,
  url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
  %fieldset
    %legend Register
    -# devise_error_messages!
    .control-group
      = f.label :name, class: "control-label"
      .controls
        = f.text_field :name, class: "input-xlarge"
        %span.help-inline= @user.errors[:name][0]
    .control-group
      = f.label :email, class: "control-label"
      .controls
        = f.text_field :email, class: "input-xlarge"
        %span.help-inline= @user.errors[:email][0]
        %p.help-block You will need to confirm your email
    .control-group
      = f.label :password, class: "control-label"
      .controls
        = f.password_field :password, class: "input-xlarge"
        %span.help-inline= @user.errors[:password][0]
    .control-group
      = f.label :password_confirmation, class: "control-label"
      .controls
        = f.password_field :password_confirmation, class: "input-xlarge"
        %span.help-inline= @user.errors[:password_confirmation][0]
    .form-actions
      = f.submit "Register", class: "btn btn-primary"

= render "links"
