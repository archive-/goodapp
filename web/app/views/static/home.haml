.mini-hero-unit.fade.in
  %a.close{href: "#", 'data-dismiss' => "alert"} &times;
  -# Make nice arrows
  -#%a#start-tour{href: "#"} &raquo;
  %h1 New to GoodApp?
  %p.tagline Take our tour.
.row
  .span8
    #home-carousel.carousel.slide
      .carousel-inner
        - @title.each_with_index do |t, i|
          - if i == 0
            .item.active
              = image_tag "/assets/crossos.png"
              .carousel-caption
                %h4= link_to t, @link[i]
                %p= @decsr[i]
          - else
            .item
              = image_tag "/assets/crossos.png"
              .carousel-caption
                %h4= link_to t, @link[i]
                %p= @decsr[i]
      %a.carousel-control.left{href: "#home-carousel",
        'data-slide' => "prev"} &lsaquo;
      %a.carousel-control.right{href: "#home-carousel",
        'data-slide' => "next"} &rsaquo;
    .row
      .span4
        .section
          %h3 Featured Developers
          - User.all[0...10].each do |dev| #where(:is_dev => true)[0...10].each do |dev| - throws error
            = user_show(dev)
      .span4
        .section
          %h3 Featured Apps
          - App.all[0...10].each do |app|
            = app_show(app)
  .span4
    .section
      %h3 Recent Reviews
      - @recent_feedbacks.each do |basic_feedback|
        = render basic_feedback
