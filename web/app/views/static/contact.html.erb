<h1>Contact the Devs of GoodApp</h1>
<div class="news-column">
  <%= form_tag do %>
  <fieldset>
    <div class="control-group">
      <%= label_tag :name %>
      <div class="controls">
          <%= text_field_tag :name, '', :class => 'input-xlarge' %>
      </div>
    </div> 
    <div class="control-group">
      <%= label_tag :email %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-envelope"></i></span>
          <%= text_field_tag :email, '', :class => 'input-xlarge' %>
        </div>
      </div>
    </div>   
    <div class="control-group">
      <%= label_tag :Message %>
      <div class="controls">
          <%= text_area_tag :message, '', :class => 'input-xlarge' %>
      </div>
    </div>     
      <div class="form-actions">
        <%= button_tag 'Submit', :class => 'btn btn-primary' %>
        <%= button_tag 'Cancel', :type => 'reset', :class => 'btn' %>
      </div>
    </fieldset> 
    <% end %>
</div>
