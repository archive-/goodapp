<h1>Search Results</h1>
     
<div class="row">
  <div class="span6">
    <h1> Apps </h1>
    <% App.all.each do |app| %>
    <% if app.name.downcase.include?(@search_query.downcase) %>
      <li> 
        <a href="<%= app_url(app) %>" rel="tooltip" class="tooltipped" title="<%= app.name %>">
        <%= link_to app.name, app %>
        </a>
      </li>
    <% end %>
  <% end %> 
  </div>
  <div class="span6">
    <h1> Devs </h1>
    <% User.all.each do |dev| %>
      <% if dev.name.downcase.include?(@search_query.downcase) %>
        <%= user_show(dev) %>
      <% end %>
    <% end %>
  </div>
</div>


