%h1= title "Search Results"

.row
  .span6
    %h2 Apps
    - if @apps.empty?
      %p No apps found by that name.
    - else
      %ul.no-bullets
        - @apps.each do |app|
          %li= render app
  .span6
    %h2 Users
    - if @users.empty?
      %p No users found by that name.
    - else
      %ul.no-bullets
        - @users.each do |user|
          %li= render user
